algoritmo "semnome"  // esse alghoritmo pede: a soma dos valores da diagonal principaçl, o produto dos valores da segunda linha
var
  m : vetor[1..4,1..4] de inteiro
  i, j, sdp, p2l, mv3 : inteiro
inicio
  sdp <- 0
  p2l <- 1
  mv3 <- 0
  para i de 1 ate 4 passo 1 faca
    para j de 1 ate 4 passo 1 faca
    escreva ("Digite o numero da posição [",i,",",j,"]")
    leia (m[i,j])
    se (i=j) entao
      sdp <- sdp + m[i,j]
    fimse
    se (i=2) entao
      p2l <- p2l*m[i,j]
    fimse
    se (j=3) entao
      se (m[i,j]>mv3) entao
        mv3 <- m[i,j]
      fimse
    fimse
    fimpara
  fimpara
  limpatela
  para i de 1 ate 4 passo 1 faca
    para j de 1 ate 4 passo 1 faca
      escreva (m[i,j]:4)
    fimpara
    escreval()
  fimpara
  escreval ("--------------------------------------------------")
  escreval ("A soma dos valores da diagonal principal é: ",sdp)
  escreval ("O produto dos valores da segunda linha é :", p2l)
  escreval ("O maior valor da terceria coluna é : ",mv3)
fimalgoritmo
